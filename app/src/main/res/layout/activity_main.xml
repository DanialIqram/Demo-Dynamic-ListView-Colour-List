<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextColour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterColour" />

    <EditText
        android:id="@+id/editTextIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterPosition"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonAddItem"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/addColour"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/buttonRemoveItem"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/removeColour"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/buttonUpdateItem"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/addColour"
            android:textAllCaps="true" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewColour"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>